<Page x:Class="SchiffeVersenken.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:SchiffeVersenken.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:core="using:Microsoft.Xaml.Interactions.Core"
      mc:Ignorable="d"
      DataContext="{Binding MainViewModel, Source={StaticResource ViewModelLocator}}"
      Background="#0078d7"
      >

    
    
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="People"
                          Label="New User">
                <AppBarButton.Flyout>
                    <Flyout>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />                    
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.05*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0"
                                Text="Enter a Username:"
                                       FontSize="30"
                                       FontWeight="SemiLight"
                                       FontFamily="Segoe UI"
                                       Margin="0,0,0,10" />
                            <TextBox Grid.Row="1"
                                     VerticalAlignment="Bottom"
                                     Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Button Grid.Row="1" Grid.Column="2" Content="Save"
                                    HorizontalAlignment="Right"
                                    FontSize="16"
                                    VerticalAlignment="Bottom"
                                    Command="{Binding NewUserCommand}" />
                        </Grid>
                    </Flyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarButton Icon="Switch"
                          Label="Select User">
                <AppBarButton.Flyout>
                    <Flyout x:Name="Flyout">
                        <StackPanel>
                            <TextBlock Text="Select User:"
                                       FontSize="30" />

                            <ListView ItemsSource="{Binding Users}"
                                      IsItemClickEnabled="True">

                                <interactivity:Interaction.Behaviors>
                                    <core:EventTriggerBehavior EventName="ItemClick">
                                        <core:InvokeCommandAction Command="{Binding ChangeUserCommand}"
                                                                  InputConverter="{StaticResource ClickToNameConverter}" />
                                    </core:EventTriggerBehavior>
                                </interactivity:Interaction.Behaviors>

                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="25" />
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Flyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarButton Label="Settings"
                          Icon="Setting"
                          Command="{Binding SettingsCommand}">
            </AppBarButton>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid x:Name="LayoutRoot">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition />
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.3*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="461*" />
            <ColumnDefinition Width="86*" />
        </Grid.ColumnDefinitions>

        <!-- Title Panel -->
        <StackPanel Grid.Row="0"
                    Margin="19,0,2.833,0.167">
            <TextBlock Text="Sea War"
                       Style="{ThemeResource TitleTextBlockStyle}"
                       Margin="0,12,0,0" />
            <TextBlock Text="Menu"
                       Margin="0,-6.5,0,26.5"
                       Style="{ThemeResource HeaderTextBlockStyle}"
                       CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}" />
        </StackPanel>

        <!--TODO: Content should be placed within the following grid-->

        
        <Button Grid.Row="1" Grid.Column="0" Content="Battle"
                    TabIndex="100"
                    HorizontalAlignment="Stretch"
                    Command="{Binding NavigateToWarCommand}"
                    VerticalAlignment="Stretch"
                    BorderBrush="#FF442864"                    
                    Background="#FF201553"
                    FontSize="25" />
        

             
                          
            <Button Grid.Row="2" Grid.Column="0" Content="Highscore"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    BorderBrush="#FF442864"
                    Background="#FF201553"
                    FontSize="25" 
                    Command="{Binding NavigateToHighscoreCommand}"/>
       

        
     
            <TextBlock Grid.Row="3" Grid.Column="0" Margin="19,0,0,0"
